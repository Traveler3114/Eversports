<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eversports.Views.FindToPlayView"
             Margin="10">
    <Border Background="Gray" Padding="0" StrokeShape="RoundRectangle 10">
        <VerticalStackLayout>
            <Label 
            x:Name="Name"
            Text="name"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="Surname"
            Text="surname"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="Email"
            Text="email"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="PhoneNumber"
            Text="phonenumber"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="Country"
            Text="country"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="City"
            Text="city"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Available on "/>
                <Label x:Name="Date" Text=" date "/>
                <Label Text=" from "/>
                <Label x:Name="FromTime" Text=" fromtime "/>
                <Label Text=" to "/>
                <Label x:Name="ToTime" Text=" totime "/>
            </HorizontalStackLayout>
            <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Want to play: "/>
                <Label x:Name="Sports" Text="sports"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>
