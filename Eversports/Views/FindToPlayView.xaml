<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Eversports.Resources"
             x:Class="Eversports.Views.FindToPlayView"
             Margin="10">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnTapped" />
    </ContentView.GestureRecognizers>
    <Border Background="Gray" Padding="0" StrokeShape="RoundRectangle 10">
        <VerticalStackLayout Padding="10">
            <Label 
            x:Name="Name"
            Text="name"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="Surname"
            Text="surname"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="Email"
            Text="email"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="Country"
            Text="country"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            x:Name="City"
            Text="city"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="{x:Static local:Strings.AvailableOn} "/>
                <Label x:Name="Date" Text=" date "/>
                <Label Text="{x:Static local:Strings.From} "/>
                <Label x:Name="FromTime" Text=" fromtime "/>
                <Label Text="{x:Static local:Strings.To} "/>
                <Label x:Name="ToTime" Text=" totime "/>
            </HorizontalStackLayout>
            <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="{x:Static local:Strings.Wanttoplay} "/>
                <Label x:Name="Sports" Text="sports"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>
