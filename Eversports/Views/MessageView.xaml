<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eversports.Views.MessageView"
             Margin="10">
    <Border x:Name="MessageBorder" Background="LightGray" Padding="0" StrokeShape="RoundRectangle 10">
        <HorizontalStackLayout>
            <Label x:Name="SenderName" Padding="10" Text="Sender" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Label x:Name="Message" Padding="10" Text="Message" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
