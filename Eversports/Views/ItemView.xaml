<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eversports.Views.ItemView"
             Margin="10">
    <Border Background="LightGray" Padding="0" StrokeShape="RoundRectangle 10">
        <HorizontalStackLayout>
            <Label x:Name="ItemLabel" Padding="10" Text="Empty" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            <Button x:Name="RemoveButton" Text="x" BackgroundColor="Transparent" Clicked="OnRemoveButtonClicked" TextColor="Black"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
