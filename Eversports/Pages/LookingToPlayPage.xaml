<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eversports.Pages.LookingToPlayPage"
             Title="Looking to play">
    <Grid Padding="30" RowSpacing="20">

        <!-- Definiranje koliko redova Grid ima i njihova svojstvva -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        


        <DatePicker
            Grid.Row="0"
            x:Name="DatePicker"
            HorizontalOptions="Fill"/>
        <TimePicker
            Grid.Row="1"
            x:Name="TimePicker"
            HorizontalOptions="Fill"/>
        <Picker
            Grid.Row="2"
            x:Name="CountryPicker"
            HorizontalOptions="Fill"/>
        <Picker
            Grid.Row="3"
            x:Name="CityPicker"           
            HorizontalOptions="Fill"/>
        <Entry
            Grid.Row="4"
            x:Name="DetailedLocationEntry"
            Placeholder="Detailed location (optional)"
            HorizontalOptions="Fill"/>
        <Picker
            Grid.Row="5"
            x:Name="SportPicker"
            HorizontalOptions="Fill"/>
        <Entry
            Grid.Row="6"
            x:Name="DescriptionEntry"
            Placeholder="Description"
            HorizontalOptions="Fill"/>
        <Button 
            Grid.Row="7"
            x:Name="CreateButton"
            Text="Create"
            HorizontalOptions="Fill"/>
    </Grid>
</ContentPage>