<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eversports.Pages.ChatPage"
             Title="ChatPage">
    <VerticalStackLayout>
        <Label 
            Text="Chat"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="BackButton" Text="Back" Clicked="BackButton_Clicked"/>
        <StackLayout x:Name="MessagesScrollView"/>

        <HorizontalStackLayout>
            <Entry x:Name="Message"/>
            <Button x:Name="SendMsgButton" Text="Send" Clicked="SendMsgButton_Clicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>